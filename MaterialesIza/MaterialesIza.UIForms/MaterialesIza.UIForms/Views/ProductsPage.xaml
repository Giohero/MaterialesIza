<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MaterialesIza.UIForms.Views.ProductsPage"
             BindingContext="{Binding Main,Source={StaticResource Locator}}"
             Title="Products">

    <ContentPage.ToolbarItems>
        <ToolbarItem IconImageSource="Add" Command="{Binding AddProductCommand}"/>
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout
            BindingContext="{Binding Products}"
            Padding="10">

            <ListView
                IsPullToRefreshEnabled="True"
                IsRefreshing="{Binding IsRefreshing}"
                HasUnevenRows="True"
                ItemsSource="{Binding Products}"
                RefreshCommand="{Binding RefreshCommand}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding SelectProductCommand}"/>
                                </Grid.GestureRecognizers>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>
                                <StackLayout Grid.Column="0"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Id}"
                                           FontAttributes="Bold"
                                           FontSize="Small"
                                           TextColor="Yellow"></Label>
                                </StackLayout>
                                <StackLayout Grid.Column="1"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Name}"
                                           FontSize="Small"
                                           TextColor="White"></Label>
                                </StackLayout>
                                <StackLayout Grid.Column="2"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Description}"
                                           FontSize="Small"
                                           TextColor="White"></Label>
                                </StackLayout>
                                <StackLayout Grid.Column="3"
                                             VerticalOptions="Center">
                                    <Label Text="{Binding Price ,StringFormat='{0:C2}'}"
                                           FontSize="Small"
                                           TextColor="White"></Label>
                                </StackLayout>
                                <Image Grid.Column="4" Source="Select">
                                </Image>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>